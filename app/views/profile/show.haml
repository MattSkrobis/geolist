%h1= profile.to_s

%b Age
= profile.age
%br

- if profile.lists
  %table.table.table-hover
    %thead
      %th Lists
    %tbody
      - profile.lists.each do |list|
        %tr
          %td= list.name
          %td
            = link_to 'Show list', my_list_path(list)
            = link_to 'Change Name', edit_my_list_path(list)
%br

= link_to 'New list', new_my_list_path
= link_to 'Lists', lists_path
%br
